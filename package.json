{
  "name": "@zentered/solid-markdown",
  "version": "1.3.0",
  "private": false,
  "description": "Render Markdown as Solid JS components",
  "keywords": [
    "remark",
    "unified",
    "markdown",
    "commonmark",
    "gfm",
    "ast",
    "solid",
    "solid-js",
    "solid-js-component",
    "component"
  ],
  "homepage": "https://github.com/andi23rosca/solid-markdown",
  "bugs": {
    "url": "https://github.com/zentered/solid-markdown/issues"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/zentered/solid-markdown.git"
  },
  "license": "MIT",
  "author": "Andi Rosca <andi23rosca@gmail.com> (https://godoffrontend.com)",
  "contributors": [
    {
      "name": "Andi Rosca",
      "url": "https://github.com/andi23rosca"
    },
    {
      "name": "High1",
      "url": "https://github.com/high1"
    },
    {
      "name": "Patrick Heneise",
      "url": "https://github.com/patrickheneise"
    }
  ],
  "type": "module",
  "main": "dist/index.jsx",
  "source": "lib/index.tsx",
  "browser": "dist/index.browser.jsx",
  "types": "dist/index.d.ts",
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "run-s build:*",
    "build:client": "esbuild lib/index.tsx --bundle --outfile=dist/index.browser.jsx --jsx=preserve --external:solid-js --format=esm && tsc",
    "build:server": "esbuild lib/index.tsx --bundle --platform=node --outfile=dist/index.jsx --jsx=preserve --external:solid-js --format=esm && tsc",
    "lint": "eslint --fix . --ext .js --ext .ts --ext .tsx",
    "prepare": "husky install"
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "lint-staged": {
    "*.{js,ts,tsx,json,md,yaml}": [
      "prettier --write"
    ],
    "*.{js,ts,jsx,tsx}": [
      "eslint --cache --fix"
    ]
  },
  "release": {
    "branches": [
      "main"
    ]
  },
  "dependencies": {
    "@types/hast": "^2.3.4",
    "@types/prop-types": "^15.7.5",
    "@types/unist": "^2.0.6",
    "comma-separated-tokens": "^2.0.3",
    "property-information": "^6.2.0",
    "remark-gfm": "^3.0.1",
    "remark-parse": "^10.0.1",
    "remark-rehype": "^10.1.0",
    "solid-js": "^1.6.16",
    "space-separated-tokens": "^2.0.2",
    "style-to-object": "^0.4.1",
    "unified": "^10.1.2",
    "unist-util-visit": "^4.1.2",
    "vfile": "^5.3.7"
  },
  "devDependencies": {
    "@commitlint/cli": "^17.5.1",
    "@commitlint/config-conventional": "^17.4.4",
    "@types/hast": "^2.3.4",
    "@typescript-eslint/parser": "^5.57.0",
    "esbuild": "^0.17.14",
    "eslint": "^8.37.0",
    "eslint-config-prettier": "^8.8.0",
    "eslint-plugin-json": "^3.1.0",
    "eslint-plugin-solid": "^0.12.0",
    "husky": "^8.0.3",
    "lint-staged": "^13.2.0",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.8.7",
    "typescript": "^5.0.2"
  },
  "peerDependencies": {
    "solid-js": "^1.2.0"
  }
}
